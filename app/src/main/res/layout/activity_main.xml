<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A3C"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_marginBottom="120dp"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="aboba1"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        android:textSize="22sp"
        android:id="@+id/nameUser1"
        />

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="aboba2"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        android:textSize="22sp"
        android:id="@+id/nameUser2"
        />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="0"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nameUser1"
        android:textSize="32sp"
        android:id="@+id/scoreUser1"
        />

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="2"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/nameUser2"
        android:textSize="32sp"
        android:id="@+id/scoreUser2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>